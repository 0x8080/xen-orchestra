.checkbox(ng-if = '!ctrl.required')
  label
    input(type = 'checkbox', ng-model = 'ctrl.model.__use')
    | &nbsp;Fill informations (optional)
  hr
.help-block(ng-if = 'ctrl.required')
  span.text-warning Fill required informations
  hr
fieldset.form-horizontal(ng-disabled = '!ctrl.required && !ctrl.model.__use', ng-hide = '!ctrl.required && !ctrl.model.__use')
  .form-group(ng-if = '(ctrl.properties |Â count) < 1')
    .col-sm-offset-2.col-md-10
      p.help-block No parameters
  .form-group(ng-repeat = '(key, property) in ctrl.properties')
    label.col-sm-2.control-label
     | {{ key }}
     span.text-warning(ng-if = 'ctrl.isRequired(property)') &nbsp;*
    .col-sm-10
      input.form-control(ng-if = 'ctrl.getType(property) === "string"', form = '{{ ctrl.form }}', type = 'text', ng-model = 'ctrl.model[key]', ng-required = 'ctrl.isRequired(property)')
      input.form-control(ng-if = 'ctrl.getType(property) === "integer"', form = '{{ ctrl.form }}', type = 'number', step = '1', ng-model = 'ctrl.model[key]', ng-required = 'ctrl.isRequired(property)')
      input.form-control(ng-if = 'ctrl.getType(property) === "number"', form = '{{ ctrl.form }}', type = 'number', step = 'any', ng-model = 'ctrl.model[key]', ng-required = 'ctrl.isRequired(property)')
      input(form = 'scheduleform', ng-if = 'ctrl.getType(property) === "boolean"', type = 'checkbox', ng-model = 'ctrl.model[key]')
      array-input(ng-if = 'ctrl.getType(property) === "array"', items = 'property.items', model = 'ctrl.model[key]')
      object-input(ng-if = 'ctrl.getType(property) === "object"', form = 'ctrl.form', properties = 'property.properties', model = 'ctrl.model[key]', required = 'ctrl.isRequired(property)')
